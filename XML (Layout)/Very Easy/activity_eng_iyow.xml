<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.english.EngIYOW">

    <include layout="@layout/shared_simple_layout"/>

    <ScrollView
        android:id="@+id/textScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/scroll_colour_english"
        android:backgroundTint="@color/scroll_colour_english"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IntroductionHeader"
                android:layout_width="match_parent"
                android:paddingHorizontal="30dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:fontFamily="@font/josefinsans_medium"
                android:gravity="center"
                android:background="@color/header_background_colour_english"
                android:text="Introduction"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/rec_title_colour_english"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingVertical="5dp"/>

            <TextView
                android:id="@+id/OpeningPara"
                android:layout_marginTop="0dp"
                android:background="@color/text_background_colour_english"
                style="@style/EnglishScrollableViews"
                android:text="In your own words questions make up a large portion of the RUAE paper, and are probably,
 the easiest marks to score during an exam. They only require a small sentence per mark, and are simple to answer correctly
if you know what you are doing." />

            <TextView
                android:id="@+id/ExplanationHeader"
                android:layout_width="match_parent"
                android:paddingHorizontal="30dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/josefinsans_medium"
                android:gravity="center"
                android:background="@color/header_background_colour_english"
                android:text="Explanation"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/rec_title_colour_english"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingVertical="5dp"/>

            <TextView
                android:id="@+id/WordChoice"
                android:layout_marginTop="0dp"
                android:background="@color/text_background_colour_english"
                style="@style/EnglishScrollableViews"
                android:text="To answer an In Your Own Words question, you simply need to find a quote which links to the question
 given, and reword it in a way that it means the same thing, but include any words from the original quote. For example,
if I had the quote &quot;It is through embracing our imperfections that we cultivate resilience and authenticity&quot; I could reword
it to &quot;By accepting our flaws we can create strength and sincerity.&quot;, and then repeat this for however many marks the question
is worth." />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/roundIcon"
        android:text="In Your Own Words"
        android:fontFamily="@font/josefinsans_medium"
        android:textColor="@color/rec_title_colour_english"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/header_background_colour_english"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>