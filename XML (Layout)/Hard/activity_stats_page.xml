<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour_english"
    tools:context=".activities.mainpages.StatsPage">

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/big_circular_background"
        android:backgroundTint="@color/button_colour_english"
        android:contentDescription="Home"
        android:scaleType="center"
        android:clickable="true"
        android:onClick="homeNavigation"
        android:src="@drawable/home_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shopButtonHome"
        app:layout_constraintStart_toEndOf="@+id/timerButtonHome" />

    <ImageView
        android:id="@+id/shopButtonHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/button_colour_english"
        android:clickable="true"
        android:contentDescription="Shop"
        android:onClick="shopNavigation"
        android:scaleType="center"
        android:src="@drawable/user_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/timerButtonHome"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/pressed_button_colour_english"
        android:contentDescription="Timer"
        android:scaleType="center"
        android:src="@drawable/stopwatch_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="310dp"
        android:layout_height="110dp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/timer_background_shape"
        android:backgroundTint="@color/pressed_button_colour_english"
        app:cardCornerRadius="250dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/timer"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/timer_background_shape"
                android:backgroundTint="@color/button_colour_english"
                android:fontFamily="@font/josefinsans_medium"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textColor="@color/button_text_colour_english"
                android:textSize="60sp"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/reset"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/big_circular_background"
        android:backgroundTint="@color/button_colour_english"
        android:fontFamily="@font/josefinsans_medium"
        android:text="Reset"
        android:textAllCaps="false"
        android:textColor="@color/button_text_colour_english"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <Button
        android:id="@+id/start"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/big_circular_background"
        android:backgroundTint="@color/button_colour_english"
        android:fontFamily="@font/josefinsans_medium"
        android:scaleType="center"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/button_text_colour_english"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="250dp"
        android:background="@color/circ_image_border"
        android:backgroundTint="@color/circ_image_border">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Logo"
                android:src="@drawable/scot_logo" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/writingLoadingText"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/josefinsans_lightitalic"
        android:text=""
        android:textColor="@color/rec_title_colour_english"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>